<div class="container">
  <h2 class="text-center"><%= @cat.name %></h2>
  <h3>Category Description</h3>
  <p><%= @cat.description %></p>
</div>

<div class="cat_posts">
  <% @cat.posts.each do |post| %>
  <div class="col-xs-12">
    <div class="text-center">
      <h2><%= post.title %></h2>
      <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
    </div>

    <div>
      <%= raw(post.body.truncate(358)) %>
    </div>

    <div class="text-center">
      <%= link_to "READ MORE", post_path(post) %>
    </div>
    <br>
  </div>
  <% end %>


  <div class="apple_pagination">
      <div class="page_info">
        <%= page_entries_info @cat_posts %>
      </div>
      <%= will_paginate @cat_posts, :container => false %>
   </div>
</div>
